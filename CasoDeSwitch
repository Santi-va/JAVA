package javaapplication7;

import javax.swing.JOptionPane;

/**
 *
 * @author Santi
 */
public class JavaApplication7 {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here
        String variable1 = JOptionPane.showInputDialog("Digite un numero del 1 al 7");
        int numeroDeDia = Integer.parseInt(variable1);
        switch (numeroDeDia) {
            case 1:
                JOptionPane.showMessageDialog(null, "Su dia es domingo");
                break;
            case 2:
                JOptionPane.showMessageDialog(null, "Su dia es Lunes");
                break;
            case 3:
                JOptionPane.showMessageDialog(null, "Su dia es Martes");
                break;
            case 4:
                JOptionPane.showMessageDialog(null, "Su dia es Miercoles");
                break;
            case 5:
                JOptionPane.showMessageDialog(null, "Su dia es Jueves");
                break;
            case 6:
                JOptionPane.showMessageDialog(null, "Su dia es Viernes");
                break;
            case 7:
                JOptionPane.showMessageDialog(null, "Su dia es Sabado");
                break;
            default:
                break;
        }
        switch (numeroDeDia) {
            case 2:
            case 3:
            case 4:
            case 5:
            case 6:
                JOptionPane.showMessageDialog(null, "Estos dias son laborales");
                break;
            case 1:
            case 7:
                JOptionPane.showMessageDialog(null, "Sus dias no son laborales");
                break;
            default:
                break;
        }
    }}
